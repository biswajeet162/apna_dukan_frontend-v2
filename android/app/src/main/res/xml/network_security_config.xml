<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTPS connections to production backend -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">apna-dukan-backend-v2-v6w4.onrender.com</domain>
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user added certificates -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Base configuration: Allow all HTTPS by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>

